@page
@model ProfileSetupModel
@{
    ViewData["Title"] = "Profile Setup";
}


<div class="p-4 h-100 d-grid align-items-center">
    <form class="user" method="post">
        <div class="row mb-2">
            <div class="col-md-6">
                <input asp-for="Input.FirstName" class="form-control" placeholder="Enter first name">
                <span class="text-danger small validation-message" asp-validation-for="Input.FirstName"></span>
            </div>

            <div class="col-md-6 mb-4">
                <input asp-for="Input.LastName" class="form-control" placeholder="Enter last name">
                <span class="text-danger small validation-message" asp-validation-for="Input.LastName"></span>
            </div>
        </div>

        <div class="form-group mb-4">
            <select asp-for="Input.Gender" class="form-control" asp-items="@ViewData["GenderList"] as SelectList">
                    <option value="">Select Gender</option>
                </select>
                <span class="text-danger small validation-message" asp-validation-for="Input.Gender"></span>
        </div>
            
        <div class="form-group mb-4">
            <input asp-for="Input.DateOfBirth" type="date" class="form-control">
            <span class="text-danger small validation-message" asp-validation-for="Input.DateOfBirth"></span>
        </div>
        
        <div class="form-group mb-4">
            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Enter phone number">
            <span class="text-danger small validation-message" asp-validation-for="Input.PhoneNumber"></span>
        </div>

        <div class="form-group mb-4">
            <input asp-for="Input.Address" class="form-control" placeholder="Enter address">
            <span class="text-danger small validation-message" asp-validation-for="Input.Address"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-block">Save Profile</button>
    </form>
</div>
