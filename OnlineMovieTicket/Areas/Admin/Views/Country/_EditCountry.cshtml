@model OnlineMovieTicket.BL.DTOs.Country.CountryDTO
<form id="editCountryForm">
    @Html.AntiForgeryToken()
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Edit Country</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span>&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
            <div class="form-group">
                <label asp-for="@Model.Name">Country Name<span class="text-danger">*</span></label>
                <input asp-for="@Model.Name" type="text" class="form-control">
                <span asp-validation-for="@Model.Name" class="text-danger small validation-message"></span>
            </div>

            <div class="form-group">
                <label for="code">Country Code<span class="text-danger">*</span></label>
                <input asp-for="@Model.Code" type="text" class="form-control">
                <span asp-validation-for="@Model.Code" class="text-danger small validation-message"></span>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
            <button class="btn btn-primary" type="submit">Save Changes</button>
        </div>
    </div>
</form>

