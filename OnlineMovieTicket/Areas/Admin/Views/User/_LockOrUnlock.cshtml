@model OnlineMovieTicket.BL.DTOs.User.UserDTO

<form id="lockOrUnlockForm">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="@Model.Email" value="@Model.Email" />
    <input type="hidden" asp-for="@Model.IsLockedOut" value="@Model.IsLockedOut" />
    <div class="modal-header">
        @if(Model.IsLockedOut){
            <h5 class="modal-title">Unlock User</h5>
        }else{
            <h5 class="modal-title">Lock User</h5>
        }
        <button type="button" class="close" data-dismiss="modal">
            <span>&times;</span>
        </button>
    </div>
    <div class="modal-body text-center">
        @if(Model.IsLockedOut){
            <p class="h5">Are you sure you want to unlock this user?</p>
        }else{
            <p class="h5">Are you sure you want to lock this user?</p>
        }
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>