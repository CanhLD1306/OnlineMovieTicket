@model OnlineMovieTicket.BL.DTOs.City.CityDTO
<form id="addCityForm">
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h5 class="modal-title" id="addCityModalLabel">Add New City</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <input type="hidden" name="Id" id="addCityId" value="@Model.Id" />
        <div class="form-group">
            <label for="name">City Name<span class="text-danger">*</span></label>
            <input asp-for="@Model.Name" id="name" type="text" class="form-control">
            <span asp-validation-for="@Model.Name" class="text-danger small validation-message"></span>
        </div>
        <div class="form-group">
            <label for="code">Postal Code<span class="text-danger">*</span></label>
            <input asp-for="@Model.PostalCode" id="code" type="text" class="form-control">
            <span asp-validation-for="@Model.PostalCode" class="text-danger small validation-message"></span>
        </div>
        <div class="form-group">    
            <label asp-for="@Model.CountryId">Country</label>
            <select asp-for="@Model.CountryId" class="form-control" asp-items="@ViewBag.Countries">
                <option value="0">-- Select Country --</option>
            </select>
            <span asp-validation-for="@Model.CountryId" class="text-danger small validation-message"></span>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>



