@model OnlineMovieTicket.BL.DTOs.Cinema.CinemaDTO
<form id="addCinemaForm">
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h5 class="modal-title" id="addCinemaModalLabel">Add New Cinema</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label asp-for="@Model.Name">Cinema Name<span class="text-danger"> *</span></label>
            <input asp-for="@Model.Name" id="name" type="text" class="form-control">
            <span asp-validation-for="@Model.Name" class="text-danger small validation-message"></span>
        </div>
        <div class="form-group">    
            <label asp-for="@Model.CountryId">Country<span class="text-danger"> *</span></label>
            <select asp-for="@Model.CountryId" id="addCountrySelected" class="form-control">
                <option value="">-- Select Country --</option>
            </select>
            <span asp-validation-for="@Model.CountryId" class="text-danger small validation-message"></span>
        </div>
        <div class="form-group">    
            <label asp-for="@Model.CityId">City<span class="text-danger"> *</span></label>
            <select asp-for="@Model.CityId" id="addCitySelected" class="form-control" disabled>
                <option value="">-- Select City --</option>
            </select>
            <span asp-validation-for="@Model.CityId" class="text-danger small validation-message"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Address">Address</label>
            <input asp-for="@Model.Address" id="Address" type="text" class="form-control">
            <span asp-validation-for="@Model.Address" class="text-danger small validation-message"></span>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>



