@{
    ViewData["Title"] = "Dashboard";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
</div>

<div id="overviewStatisticsCards"></div>
<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">Revenue Over Time</h6>
                <div class="form-group mb-0">
                    <select id="timeGrouping" class="form-control form-control-sm">
                        <option value="month">Month</option>
                        <option value="week">Week</option>
                        <option value="day">Day</option>
                    </select>
                </div>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="revenueChart"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Tickets by Seat Type</h6>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="seatTypeChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <h3 class="card-title">Top 5 Revenue-Generating Movies</h3>
        <div class="table-responsive">
            <table id="moviesTable" class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th class="text-center">Poster</th>
                        <th>Title</th>
                        <th class="text-center">Total Revenue</th>
                        <th class="text-center">Ticket Sold</th>
                        <th class="text-center">Release Date</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const urlGetOverviewStatistics = '@Url.Action("GetOverviewStatistics", "Dashboard", new { area = "Admin" })';
        const urlGetTop5Movies = '@Url.Action("GetTop5Movies", "Dashboard", new { area = "Admin" })';
        const urlGetRevenueByDateGroup = '@Url.Action("GetRevenueByDateGroup", "Dashboard", new { area = "Admin" })';
        const urlGetTicketRatioBySeatType = '@Url.Action("GetTicketRatioBySeatType", "Dashboard", new { area = "Admin" })';
    </script>
    <script src="~/Admin/js/Dashboard.js" asp-append-version="true"></script>
}