@model OnlineMovieTicket.BL.DTOs.SeatType.SeatTypeDTO
<form id="editSeatTypeForm">
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h5 class="modal-title" id="editSeatTypeModalLabel">Edit SeatType</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
        <div class="form-group">
            <label asp-for="@Model.Name">SeatType Name <span class="text-danger">*</span></label>
            <input asp-for="@Model.Name" type="text" class="form-control" readonly>
            <span asp-validation-for="@Model.Name" class="text-danger small validation-message"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.PriceMultiplier">Price Multiplier <span class="text-danger">*</span></label>
            <input asp-for="@Model.PriceMultiplier" type="number" step="0.01" min="1.00" max="10.00" class="form-control">
            <span asp-validation-for="@Model.PriceMultiplier" class="text-danger small validation-message"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Color">Color <span class="text-danger">*</span></label>
            <input asp-for="@Model.Color" type="color" class="form-control">
            <span asp-validation-for="@Model.Color" class="text-danger small validation-message"></span>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>



