<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineMovieTicket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"  asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineMovieTicket.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .hero-banner {
            position: relative;
            height: 500px;
            overflow: hidden;
        }
        
        .hero-banner img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            filter: brightness(0.5);
        }

        .movie-poster {
            border-radius: 10px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
            object-fit: contain;
        }
        
        .movie-poster:hover {
            transform: scale(1.02);
        }
        
        .movie-info-card {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            background-color: white;
        }
        
        .movie-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }
        
        .movie-meta-item {
            display: flex;
            align-items: center;
            color: #6c757d;
        }
        
        .movie-meta-item i {
            margin-right: 0.5rem;
            color: #c50812;
        }

        .btn-trailer {
            background-color: transparent;
            color: #c50812;
            border: 1px solid #c50812;
            transition: all 0.3s ease;
        }
        
        .btn-trailer:hover {
            background-color: #c50812;
            color: white;
        }
        
        .btn-booking {
            background-color: #c50812;
            border-color: #c50812;
            transition: all 0.3s ease;
        }
        
        .btn-booking:hover {
            background-color: #c50812;
            border-color: #c50812;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top">
            <div class="container">
                <a class="navbar-brand fs-3" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-film text-highlight"></i> OMT
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Movie" asp-action="Index">Movies</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4 mb-lg-0">
                    <h5 class="fw-bold mb-3 text-light">
                        <i class="bi bi-film text-highlight"></i> OMT
                    </h5>
                    <p class="text-light">Your ultimate destination for the best cinema experience. State-of-the-art technology, comfortable seating, and a wide selection of movies.</p>
                </div>
                <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                    <h5 class="fw-bold mb-3 text-light">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a asp-controller="Home" asp-action="Index" class="text-light text-decoration-none">Home</a></li>
                        <li class="mb-2"><a asp-controller="Movie" asp-action="Index" class="text-light text-decoration-none">Movies</a></li>
                        <li class="mb-2"><a asp-controller="Privacy" asp-action="Index" class="text-light text-decoration-none">Privacy</a></li>
                    </ul>
                </div>
                <div class="col-lg-4 col-md-6">
                    <h5 class="fw-bold mb-3 text-light">Follow Us</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a href="#" class="text-light d-flex align-items-center text-decoration-none">
                                <i class="bi bi-facebook  me-2"></i>
                                <span>Facebook</span>
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-light d-flex align-items-center text-decoration-none">
                                <i class="bi bi-twitter  me-2"></i>
                                <span>Twitter</span>
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-light d-flex align-items-center text-decoration-none">
                                <i class="bi bi-instagram  me-2"></i>
                                <span>Instagram</span>
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-light d-flex align-items-center text-decoration-none">
                                <i class="bi bi-youtube  me-2"></i>
                                <span>YouTube</span>
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
            <hr class="my-4 bg-secondary">
            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    <p class="small text-muted mb-0">© 2025 OnlineMovieTicket. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/navigation.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/notification.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
